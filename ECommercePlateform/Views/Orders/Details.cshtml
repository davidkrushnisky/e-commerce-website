@model ECommercePlateform.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPrice)
        </dt>
        <dd class = "col-sm-10">
            @Model.TotalPrice.ToString("C2")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderDate)
        </dd>
        <dd class="col-sm-10">
            <table class="table table-light table-striped">
                <tr class="table-dark">
                    <th>Product Name</th>
                    <th>Color</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Total</th>
                    <th>Image</th>

                </tr>
                @foreach (var item in Model.Products)
                {
                    <tr>
                        <td>
                            <a asp-controller="Products" asp-action="Details" asp-route-id="@item.ProductId">@item.Name</a>
                        </td>
                        <td>
                            @item.Color
                        </td>
                        <td>
                            @item.Quantity
                        </td>
                        <td>
                            @item.Price.ToString("C2")
                        </td>
                        <td>
                            @(item.Quantity * item.Price)
                        </td>
                        <td>
                            <img src="data:image;base64,@System.Convert.ToBase64String(item.Pictures)" class="img-fluid" style="max-width:300px;" />
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-info" role="button" asp-action="Index">Back to order history</a>
</div>
